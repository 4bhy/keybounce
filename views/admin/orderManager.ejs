<%- include('../partials/adminHeader') %>
<style>

    .href {
  background-color: #000000;
  color: white;
  padding: 14px 25px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  border-radius: 25px;
}

.href:hover {
  background-color: rgb(61, 43, 43);
}
</style>

    <div class="container mt-5">
        <table class="table">
            <thead>
        
                    <a class="href mr-3" href="/admin/cat-sel?id=all">All</a>
                    <a  class="href mr-3" href="/admin/cat-sel?id=confirmed">Confirmed</a>
                    <a class="href" href="/admin/cat-sel?id=delivered">Delivered</a>
                  
    
            </thead>
            <tbody>
                <tr>
                    <th scope="row">Date</th>
                    <td>Payment Type</td>
                    <td>Amount</td>
                    <td>Status</td>
                </tr>
                <% for(let i=1;i<=orders.length;i++) { 
                    if(orderStatus=='all') { %>
                    <tr>
                        <td>
                            <h6>
                                <%=orders[i-1].createdAt %>
                            </h6>
                        </td>
                        <td>
                            <h6>
                                <%=orders[i-1].payment %>
                            </h6>
                        </td>
                        <td>
                            <h6>
                                <%=orders[i-1].totalprice %>
                            </h6>
                        </td>
                        <td>
                            <h6>
                                <%=orders[i-1].status %>
                            </h6>
                        </td>
                        <td>
                            <h6>
                                <form action="/admin/confirm-order?id=<%=orders[i-1]._id %>" method="post">
                                    <td><button type="submit" class="btn-primary">Confirm</button></td>
                                </form>
                            </h6>
                        </td>
                        <td>
                            <h6>
                                <form action="/admin/delete-order?id=<%=orders[i-1]._id %>" method="post">
                                    <td><button type="submit" class="btn-primary">Cancel</button></td>
                                </form>
                            </h6>
                        </td>
                    </tr>
                   <%} else if(orderStatus=='confirmed' && orders[i-1].status=='confirmed'){ %>
                   <tr>
                    <td>
                        <h6>
                            <%=orders[i-1].createdAt %>
                        </h6>
                    </td>
                    <td>
                        <h6>
                            <%=orders[i-1].payment %>
                        </h6>
                    </td>
                    <td>
                        <h6>
                            <%=orders[i-1].totalprice %>
                        </h6>
                    </td>
                    <td>
                        <h6>
                            <%=orders[i-1].status %>
                        </h6>
                    </td>
                    <td>
                        <h6>
                            <form action="/admin/deliver-order?id=<%=orders[i-1]._id %>" method="post">
                                <td><button type="submit" class="btn-primary">Deliver</button></td>
                            </form>
                        </h6>
                    </td>
                    <td>
                        <h6>
                            <form action="/admin/delete-order?id=<%=orders[i-1]._id %>" method="post">
                                <td><button type="submit" class="btn-primary">Cancel</button></td>
                            </form>
                        </h6>
                    </td>
                </tr>
                <%} else if(orderStatus=='delivered' && orders[i-1].status=='delivered'){ %>
                    <tr>
                    <td>
                        <h6>
                            <%=orders[i-1].createdAt %>
                        </h6>
                    </td>
                    <td>
                        <h6>
                            <%=orders[i-1].payment %>
                        </h6>
                    </td>
                    <td>
                        <h6>
                            <%=orders[i-1].totalprice %>
                        </h6>
                    </td>
                    <td>
                        <h6>
                            <%=orders[i-1].status %>
                        </h6>
                    </td>
                </tr>
                    <% }} %>
            </tbody>
        </table>
    </div>