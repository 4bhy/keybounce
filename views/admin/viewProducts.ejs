<%- include('../partials/adminHeader') %>


    <!-- Page Header Start -->
    <div class="container-fluid bg-secondary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 60px">
            <h3 class="font-weight-semi-bold text-uppercase mb-3">Product List</h3>
            <div class="d-inline-flex">
                <!-- <p class="m-0"><a href="">Home</a></p> -->
            </div>
        </div>
    </div>
    <!-- Page Header End -->


    <!-- Cart Start -->
    <div class="container-fluid pt-1">
        <div class="row px-xl-5">
            <div class="col-lg-12 table-responsive mb-5">
                <table class="table table-bordered text-center mb-0">
                    <thead class="bg-secondary text-dark">
                        <tr>
                            <th>No</th>
                            <th>Product Name</th>
                            <th>Manufacturer</th>
                            <th>Color</th>
                            <th>Qunatity</th>
                            <th>Price</th>
                            <th>Image</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        <% if(product.length>0) {
                            for(let i=1;i<=product.length;i++) { %>
                                <tr>
                                    <td>
                                        <%= i %>
                                    </td>
                                    <td>
                                        <%=product[i-1].pname %>
                                    </td>
                                    <td>
                                        <%=product[i-1].manufacturer%>
                                    </td>
                                    <td>
                                        <%=product[i-1].color %>
                                    </td>
                                    <td>
                                        <%=product[i-1].quantity %>
                                    </td>
                                    <td>
                                        <%=product[i-1].price %>
                                    </td>
                                    <td>
                                        <% if(product[i-1].image) { %>
                                            <img src="./productImages/<%= product[i-1].image %>" alt="image"
                                                width="100vw" height="100vh">
                                            <% } %>
                                    </td>
                                    <td><a href="/admin/editProduct?id=<%= product[i-1]._id %>">Edit</a></td>
                                    <td><a href="/admin/deleteProduct?id=<%= product[i-1]._id %>">Delete</a></td>

                                </tr>
                                <% } %>
                                    <% } %>
                    </tbody>
                </table>
            </div>

    <br> <%
    for(let j=1; j<=totalPages; j++) { %>
     <a href="?=page=<%=j%>"><%= j %></a>
   <% } %>




            <!-- Back to Top -->
            <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


            <!-- JavaScript Libraries -->
            <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
            <script src="lib/easing/easing.min.js"></script>
            <script src="lib/owlcarousel/owl.carousel.min.js"></script>

            <!-- Contact Javascript File -->
            <script src="mail/jqBootstrapValidation.min.js"></script>
            <script src="mail/contact.js"></script>

            <!-- Template Javascript -->
            <script src="js/main.js"></script>
            </body>

            </html>